<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_backgorund"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/login_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/white"
        android:text="Login"
        android:textColor="@color/appColor"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="5dp" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_button"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FFFFFF"
        android:text="Register"
        android:textColor="@color/appColor"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="5dp" />

    <TextView
        android:id="@+id/appName"
        style="@android:style/Widget.DeviceDefault.TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="130dp"
        android:fontFamily="sans-serif-black"
        android:shadowColor="#F475E0"
        android:text="Next2Me"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/appDescription"
        android:layout_width="310dp"
        android:layout_height="127dp"
        android:layout_above="@+id/login_button"
        android:layout_below="@+id/appName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="13dp"
        android:text='Scopri chi hai accanto, potrebbe essere la tua anima gemella!'
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="38dp"
        android:text="Registrandoti accetti le nostre condizioni generali di utilizzo e la normativa sulla privacy"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:textStyle="italic" />

</RelativeLayout>